{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDirs": [
      "types"
    ],
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "./**/*.js"
  ],
  "include": [
    "src/**/*.*",
  ]
}
